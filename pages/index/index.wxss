/**index.wxss**/
.container{
  position: relative;
  margin: 5px;
}

.card image{
  width: 100%;
  border-radius: 5%;
  box-shadow: 0 0 5px #5F687E;
}

.userinfo {
  position: absolute;
  top: 30px;
  left: 20px;
  display: flex;
  flex-direction: column;
  /* align-items:flex-start; */
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 15%;
}

.userinfo-nickname {
  /* margin-left: 30px; */
  color: rgb(44, 42, 42);
}

.userinfo-add{
  position: absolute;
  left: 24rpx;
  bottom: 60rpx;
  font-weight:bold;
  color: rgb(44, 42, 42);
}

